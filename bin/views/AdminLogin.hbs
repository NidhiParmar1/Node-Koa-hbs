<script>  
function validateform(){  
var name=document.myform.aname.value;  
var password=document.myform.apassword.value;  
  
if (name==null || name==""){  
  alert(" User Name can't be blank");  
  return false;  
}else if(password.length<4){  
  alert("Password must be at least 4 characters long.");  
  return false;  
  }  
}  
</script>  
