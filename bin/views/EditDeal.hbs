<div class=container>
<form method='post' action='updatedeal'>
     <div class="form-group">
         <label for="username" class="text-info">Deal:</label>
         <input type="hidden" name='id' class="form-control" value ="<%= data._id %>" placeholder="Deal">
        <input type="text" name='deal' class="form-control" value ="<%= data.dealname %>" placeholder="Deal">
    </div>
    <div class="form-group">
         <label for="username" class="text-info">Deal Description:</label>
        <textarea name='dealdesc' class="form-control" placeholder="About Deal"><%= data.dealdescription %></textarea>
    </div>
    <div class="form-group">
         <label for="username" class="text-info">Deal Validity:</label>
        <label for="time">From:</label>
                <input type="date"  name="fromdate" value ="<%= data.dealvalidity.fromdate %>">
        <label for="time">To:</label>
                <input type="date"  name="todate" value ="<%= data.dealvalidity.todate %>">
    </div>
    <div class="form-group">
         <label for="username" class="text-info">Deal Validity Hours:</label>
         <label for="time">From:</label>
                <input type="time"  name="fromtime"value ="<%= data.dealvalidity.fromtime %>" >
        <label for="time">To:</label>
                <input type="time"  name="totime" value ="<%= data.dealvalidity.totime %>">
    </div>
    <div class="form-group text-center"><input type='submit' class="btn btn-primary" value="Save Deal"></div>
</form>   
</div>