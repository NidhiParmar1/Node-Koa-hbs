<div class=container>
<form method='post' action='updateplace'>
     <div class="form-group">
         <label for="username" class="text-info">Place:</label>
         <input type="hidden" name='id' class="form-control" value ="<%= data._id %>" placeholder="Deal">
        <input type="text" name='pname' class="form-control" value ="<%= data.place %>" placeholder="Deal">
    </div>
    <div class="form-group">
    <label for="username" class="text-info">Place Address:</label><br>
    <input type="text" id='paddress' name='address' class="form-control" value ="<%= data.placeaddress.address %>"placeholder="Place Address">
    </div>
    <div class="form-inline">
    <label for="username" class="text-info">Latitude: </label>
    <input type="number" id='paddress' name='lat' class="form-control" value ="<%= data.placeaddress.lat %>"placeholder="">
    <label for="username" class="text-info">Longitude: </label>
    <input type="number" id='paddress' name='lng' class="form-control" value ="<%= data.placeaddress.lng %>"placeholder="">
    </div>
    <div class="form-group text-center"><input type='submit' class="btn btn-primary" value="Update Place"></div>
</form>   
</div>